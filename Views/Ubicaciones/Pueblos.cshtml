@model List<Pueblo>
<h1>Lista de pueblos</h1>
<table class="table border">
    <tr>
        <th>Id</th>
        <th>Nombre</th>
        <th>Region</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.Id</td>
            <td>@item.Nombre</td>
            <td>
                @item.Region.Nombre
            </td>
        </tr>
    }
    @if (Model.Count == 0) {
        <tr>
            <td colspan="4" class="text-center">No se encontraron pueblos</td>
        </tr>
    }
</table>

