@model List<Entrenador>


<h1>Lista de Entrenadores</h1>

<table class="table border">
    <tr>
        <th>Id</th>
        <th>Nombre</th>
        <th>Pueblos</th>
        <th>Foto</th>
        <th>Operaciones</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.Id</td>
            <td>@item.Nombre</td>
            <td>
                @item.Pueblo.Nombre
            </td>
            <td>@item.Foto</td>
            <td>
                <a href="/ubicaciones/editarentrenador/@item.Id" class="btn btn-secondary">Editar</a>

                <form action="/ubicaciones/borrarentrenador" method="post" class="d-inline-block">
                    <input type="hidden" name="id" value="@item.Id" />
                    <button class="btn btn-danger">Borrar</button>
                </form>
            </td>
        </tr>
    }
    @if (Model.Count == 0) {
        <tr>
            <td colspan="4" class="text-center">No se encontraron Entrenadores</td>
        </tr>
    }
</table>
